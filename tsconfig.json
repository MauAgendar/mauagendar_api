{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "typeRoots": [
    "./src/@types",
    "./node_modules/@types"
  ]
}

